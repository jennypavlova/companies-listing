{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}